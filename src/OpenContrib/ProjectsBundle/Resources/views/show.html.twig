{% extends 'OpenContribViewBundle::main.html.twig' %}

{% block container %}

    <div class="container">
        <h1>Project {{ project.nom }}</h1>
        <div class="img" style="background-image:url('{{ app.request.getSchemeAndHttpHost() }}{{ app.request.basePath }}{{vich_uploader_asset(project, 'imageFile') }}')"></div>
        <br>
        <p>Cat√©gorie : {{ project.categorie }}</p>
        <p><h2>Description du projet </h2> </p>
        <p>{{ project.description }}</p>
        <ul>
            <li>
                <a href="{{ path('projects_index') }}">Back to the list</a>
            </li>
            <li>
                <a href="{{ path('projects_edit', { 'id': project.id }) }}">Edit</a>
            </li>
            <li>
                {{ form_start(delete_form) }}
                    <input class="btn btn-danger" value="Delete" type="submit">
                {{ form_end(delete_form) }}
            </li>
        </ul>
    </div>
    <!-- starting style -->
    <style>
        .container {
            margin-top: 50px;
        }
        td, th {
            border: solid 1px;
            text-align: center;
            padding: 2px;
        }
        .img {
            width: 400px;
            height: 300px;
            margin-left: 35%;
            background: no-repeat;
            background-size: contain;
        }
    </style>
    <!-- end style -->
{% endblock %}
