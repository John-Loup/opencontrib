{% extends 'OpenContribViewBundle::main.html.twig' %}

{% block container %}

    <div class="container">
        <h1 style="text-align: center; text-transform: uppercase; color: #1E90FF;">{{ project.nom }}</h1>
        <div class="img" style="background-image:url('{{ app.request.getSchemeAndHttpHost() }}{{ app.request.basePath }}{{vich_uploader_asset(project, 'imageFile') }}')"></div>
        <br>
        <div class="container-description">
            <div class="title-description">Description du projet</div>
            <div style="font-size: 16px;">{{ project.categorie }}</div>
            <div style="clear: both; float: none; height: 0"></div>
        </div>
        <p class="description">{{ project.description }}</p>
        <ul>
            <li>
                <a href="{{ path('projects_index') }}">Revenir Ã  la liste des projets</a>
            </li>
            <li>
                <a href="{{ path('projects_edit', { 'id': project.id }) }}">Editer</a>
            </li>
            <li>
                {{ form_start(delete_form) }}
                    <input class="btn btn-danger" value="Supprimer" type="submit">
                {{ form_end(delete_form) }}
            </li>
        </ul>
    </div>
    <!-- starting style -->
    <style>
        .container {
            margin-top: 50px;
        }
        td, th {
            border: solid 1px;
            text-align: center;
            padding: 2px;
        }
        .img {
            width: 400px;
            height: 300px;
            margin-left: 35%;
            background: no-repeat;
            background-size: contain;
        }
        .container-description {
            width: 100%;
            border-bottom: solid 1px;
        }

        li, input {
            display: inline;
        }

        .description {
            margin-top: 25px;
        }

        .container-description div {
            float: left;
            margin-left: 10px;
        }

        .title-description {
            font-size: 16px;

        }
    </style>
    <!-- end style -->
{% endblock %}
